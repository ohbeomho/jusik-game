<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jusik Game - Leaderboard</title>
  </head>
  <body>
    <%- include("./nav.ejs") %>
    <main>
      <h1>Top 10 - Credits</h1>
      <ul>
        <% for (let user of top10) { %>
        <li class="user">
          <span class="username <%= loggedUser?.username === user.username ? "me" : "" %>"><%= user.username %></span>
          <span class="credits"><%= user.totalCredits %>C</span>
        </li>
        <% } %>
      </ul>
    </main>
  </body>
</html>
