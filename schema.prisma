generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  id           Int         @id @default(autoincrement())
  name         String      @unique
  priceHistory Float[]
  currentPrice Float
  users        UserStock[]
}

model User {
  username      String      @unique
  password      String
  credits       Float       @default(10000)
  totalCredits  Float       @default(10000)
  creditHistory Float[]
  stocks        UserStock[]
}

model UserStock {
  id           Int    @id @default(autoincrement())
  user         User   @relation(fields: [username], references: [username])
  username     String
  stock        Stock  @relation(fields: [stockId], references: [id])
  stockId      Int
  quantity     Int
  totalCredits Float
}

model LastSeasonTopUser {
  rank     Int    @unique
  username String
  credits  Float
}
