generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  id           Int         @id @default(autoincrement())
  name         String      @unique
  priceHistory Int[]
  currentPrice Int
  users        UserStock[]
}

model User {
  username      String      @unique
  password      String
  credits       Int         @default(100000)
  totalCredits  Int         @default(100000)
  creditHistory Int[]
  stocks        UserStock[]
}

model UserStock {
  id           Int    @id @default(autoincrement())
  user         User   @relation(fields: [username], references: [username])
  username     String
  stock        Stock  @relation(fields: [stockId], references: [id])
  stockId      Int
  quantity     Int
  totalCredits Int
}
